{
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "plugins": [
    "svelte3"
  ],
  "globals": {
    "module" : "readonly",
    "describe": "readonly",
    "it": "readonly",
    "expect": "readonly",
    "process": "readonly",
    "require": "readonly"
  },
  "overrides": [
    {
      "files": ["**/*.svelte"],
      "processor": "svelte3/svelte3"
    }
  ],
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "eol-last": ["error", "always"],
    "computed-property-spacing": ["error", "always"],
    "camelcase": ["error", {
      "properties": "always",
      "ignoreDestructuring": true,
      "ignoreImports": true
    }],
    "brace-style": ["error", "1tbs", {"allowSingleLine": true}],
    "array-element-newline": ["error", "always"],
    "array-bracket-spacing": ["error", "always"],
    "array-bracket-newline": ["error", "always"],
    "indent": [
        "error",
        2
      ],
      "max-len": [
        "error",
        {
          "code": 100
        }
      ],
      "semi": ["error", "always"],
      "no-duplicate-imports": ["error"],
      "no-var": ["error"],
      "prefer-const": ["error"],
          "prefer-destructuring": [
            "error",
            {
              "object": true,
              "array": false
            }
          ],
      "prefer-spread": ["error"],
      "arrow-spacing": ["error", {
          "before": true,
          "after": true
        }],
      "require-await": ["error"],
      "multiline-ternary": ["error", "always"],
      "new-cap": ["error"],
      "no-trailing-spaces": ["error"],
      "object-curly-spacing": ["error", "always"],
      "object-curly-newline": [
          "error",
          {
            "ObjectExpression": {
              "multiline": true,
              "minProperties": 3
            },
            "ObjectPattern": {
              "multiline": true,
              "minProperties": 3
            },
            "ImportDeclaration": {
              "multiline": true,
              "minProperties": 2
            },
            "ExportDeclaration": {
              "multiline": true,
              "minProperties": 2
            }
          }
        ],
      "object-property-newline": ["error"],
      "quotes": ["error", "single"]
  },
  "settings": {
  }
}
